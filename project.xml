<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="wendrowyczHaxe" package="wendrowyczHaxe" version="1.0.0" company="jaq" />
	
	<!-- output -->
	<app main="pl.jaqjacek.boardgames.wendrowycz.Main" file="wendrowyczHaxe" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="1200" height="800" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="lib-src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="msignal" />
	<haxelib name="tjson" />
	<haxelib name="dconsole" />
	<haxelib name="haxeui" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/layouts" rename="layouts" />
	<assets path="db" rename="db" />
	<assets path="assets/" rename="" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>